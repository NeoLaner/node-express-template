{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": { "@/*": ["./src/*"], "@libraries/*": ["./src/libraries/*"] }
  },
  "include": [".eslintrc.json ", "src/**/*.ts", "copy-public.ts"],

  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}
